<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" id="/" version="1">

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			classpath:app-context-config.xml
		</param-value>
	</context-param>
	
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<servlet>
	   <servlet-name>blandon-test</servlet-name>
	     <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
	</servlet>
	

	<servlet-mapping>
		<servlet-name>blandon-test</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>


	 <jsp-config>
    
    	<taglib>
      		 <taglib-uri>red</taglib-uri>
       		 <taglib-location>/WEB-INF/user.tld</taglib-location>
    	</taglib>	
        
    </jsp-config>

	
	<welcome-file-list>
	        <welcome-file>index.jsp</welcome-file>
	        <welcome-file>index.html</welcome-file>
	</welcome-file-list>	
	

	
          
</web-app>